<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="asu.edu.televisionandroid.LoginActivity"
    android:background="#ffffffff">


    <ImageView
        android:id="@+id/imageViewLogin"
        android:background="@drawable/mayologo"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width = "100dp"
        android:layout_height= "100dp"
        android:layout_marginTop="73dp" />


    <Button
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:text="SIGN IN"
        android:onClick="onLoginClicked"
        android:id="@+id/loginButton"
        android:layout_marginBottom="75dp"
        android:background="@drawable/buttonborder"
        android:stateListAnimator="@null"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#1D318A" />

    <EditText
        android:layout_width="275dp"
        android:layout_height="30dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/getusername"
        android:background="@drawable/roundededittext"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="275dp"
        android:layout_height="30dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/getpassword"
        android:background="@drawable/roundededittext"
        android:layout_below="@+id/getusername"
        android:layout_alignLeft="@+id/getusername"
        android:layout_alignStart="@+id/getusername"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sign In"
        android:id="@+id/textView"
        android:layout_above="@+id/getusername"
        android:layout_alignLeft="@+id/getusername"
        android:layout_alignStart="@+id/getusername"
        android:layout_marginBottom="25dp" />

